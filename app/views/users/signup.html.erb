<% if @user.errors.any? %>
<div class="row">
  <div class="bg-danger col-sm-3 col-sm-offset-2 text-center">
    <ul class="list-unstyled">
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %> </li>
      <% end %>
    </ul>
  </div>
</div>

<%= simple_form_for @user do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
