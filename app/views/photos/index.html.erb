<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <!-- Add a photo -->
      <%= link_to new_gallery_photo_path(@gallery, @photo), class:"primary" do %>
        <span class="button-icon">
        <i class="glyphicon glyphicon-plus"></i>
        </span>
        <span class="button-label">Add a photo</span><br />
        <span class="flash"><%= flash[:success] %></span>
      <% end %>
    </div>

  <% if @gallery.photos.count != nil %>
    <% @gallery.photos.each do |photo| %>
      <div class="media-object">
        <div class="media">
          <%= link_to image_tag(photo.photo_upload.versions[:thumb]), gallery_photo_path(@gallery, photo) %>
      <!-- Delete a Photo -->
      <%= link_to gallery_photo_path(@gallery, photo), data: {confirm: "Are you sure you want to delete this photo? This operation cannot be undone."}, method: "delete", class:"primary" do %>
        <span class="button-icon">
        <i class="glyphicon glyphicon-trash"></i>
        </span>
        <span class="button-label">Delete Photo</span>
      <% end %>
    </div>
  </div>

    <% end %>
  <% else %>
    <h1 class="text-center"> You have no photos to display. Click "Add Photo" to add some!</h1>
  <% end %>

  </div>
</div>
